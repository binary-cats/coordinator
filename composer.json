{
    "name": "binary-cats/coordinator",
    "description": "Schedule and manage resource booking (appointments) in your Laravel app",
    "keywords": [
        "appointment",
        "binary-cats",
        "booking",
        "eloquent",
        "event",
        "laravel",
        "schedule"
    ],
    "homepage": "https://github.com/binary-cats/coordinator",
    "license": "MIT",
    "authors": [
        {
            "name": "Cyrill Kalita",
            "email": "cyrill.kalita@gmail.com",
            "homepage": "https://github.com/binary-cats",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^8.0|^9.0",
        "spatie/laravel-package-tools":"^1.0",
        "spatie/period": "^2.0"
    },
    "require-dev": {
        "nunomaduro/larastan": "^0.7.3",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "BinaryCats\\Coordinator\\": "src",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinaryCats\\Coordinator\\Tests\\": "tests"
        }
    },
    "suggest": {
        "binary-cats/laravel-sku": "Generate SKU in your Laravel models",
        "binary-cats/laravel-mailgun-webhooks": "Handle Mailgun webhooks in your Laravel application"
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyse src tests --memory-limit=2G",
        "fix": "./vendor/bin/phpcbf -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "style": "./vendor/bin/phpcs -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 --report-width=200 --report-summary --report-full --standard=PSR2 -n src tests",
        "test": "./vendor/bin/phpunit --color=always"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BinaryCats\\Coordinator\\CoordinatorServiceProvider"
            ]
        }
    }
}
